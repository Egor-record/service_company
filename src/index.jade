    div(layout="column" ng-cloak="").mdl-layout__container
        section(layout="row" flex="" ng-controller="SideCtrl")
            md-sidenav.md-sidenav-left.closed(md-component-id="left" md-whiteframe="4" md-is-locked-open="$mdMedia('gt-md')")#sideBar
                md-toolbar(ng-controller="UserDataCtrl")
                    img(ng-src="{{userPick}}" alt="avatar").avatar
                    .user-data__wrapper
                        .user-data.user-name {{userData.data.first_name}}
                        .user-data.user-post {{userData.data.position.name}}
                        .user-data.user-organization {{userData.data.provider.str_name}}
                nav.mdl-navigation(ng-controller="MenuCtrl")
                    .mdl-navigation__wrapper(ng-repeat="link in links")
                        a.mdl-navigation__link(href="{{link.href}}")
                            span {{link.name}}
                    .mdl-layout-spacer
                    .mdl-navigation__link.apps.apps-flex
                            a.mdl-navigation.mdl-navigation__link(href="{{playMarketHref}}" target="_blank" rel="nofollow")
                                i.fa.fa-android
                            a.mdl-navigation.mdl-navigation__link(href="{{appleStoreHref}}" target="_blank" rel="nofollow")
                                i.fa.fa-apple
            header
                .drawer-button(role="button" ng-click="toggleLeft()")
                    i.fa.fa-bars
                .mdl-layout__header-row
                    span.mdl-layout-title Личный кабинет
                    .mdl-layout-spacer
            main
                ui-view
